<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.LaunchTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_200</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/black</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_200</item>
    <item name="colorOnSecondary">@color/black</item>
    <item name="titleTextColor">@color/white</item>
    <item name="subtitleTextColor">#808080</item>
    <item name="backgroundColor">#121212</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="android:fontFamily">@font/rubik_regular</item>
  </style>
  
  <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
    <item name="android:layout_height">36dp</item>
    <item name="tabIndicator">@drawable/sh_chip</item>
    <item name="tabIndicatorColor">?colorPrimaryVariant</item>
    <item name="tabIndicatorHeight">36dp</item>
    <item name="tabSelectedTextColor">@color/white</item>
    <item name="tabTextColor">?colorOnBackground</item>
    <item name="tabRippleColor">#00000000</item>
    <item name="fontFamily">@font/rubik_bold</item>
    <item name="tabTextAppearance">@style/tabLabel</item>
  </style>
  
  <style name="Cards" parent="CardView">
    <item name="cardBackgroundColor">#222222</item>
    <item name="cardCornerRadius">8dp</item>
    <item name="cardElevation">4dp</item>
    <item name="android:layout_margin">8dp</item>
  </style>
</resources>